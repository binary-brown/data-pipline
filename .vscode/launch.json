{
	"configurations": [
		{
			"name": "Python Debugger: Current File",
			"type": "debugpy",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal"
		},
		{
			"name": "Debug CLI",
			"type": "debugpy",
			"request": "attach",
			"listen": {
				"host": "localhost",
				"port": 5678
			},
			"pathMappings": [
				{
					"localRoot": "${workspaceFolder}/pipeline_project",
					"remoteRoot": "."
				}
			]
		}
	]
}
