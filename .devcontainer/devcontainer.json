// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-in-docker
{
    "name": "Data pipline project",
    // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
    "image": "ghcr.io/chrisb-bacon/dev-machine-devcontainer:latest",
    "containerEnv": {
      "OP_SERVICE_ACCOUNT_TOKEN": "${localEnv:OP_SERVICE_ACCOUNT_TOKEN}",
      "POETRY_VIRTUALENVS_IN_PROJECT": "true",
      "HF_HOME": "/workspaces/data/huggingface"
    },
    "privileged": true,
    "capAdd": ["SYS_ADMIN", "SYS_PTRACE"],
    "runArgs": ["--init"],
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces,type=bind",
    "mounts": [
        "source=external_data,target=/workspaces/data,type=volume",
        "source=ollama_models,target=/root/.ollama,type=volume"
    ],
    "workspaceFolder": "/workspaces",
    "userEnvProbe": "loginInteractiveShell",
    "forwardPorts": [5173, 8001, 8000],
    "portsAttributes": {
      "5173": {
        "label": "FrontEnd",
        "onAutoForward": "openBrowser"
      },
      "8001": {
        "label": "BackEnd-FastAPI",
        "onAutoForward": "notify"
      }
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "1password.1password",
          "ms-vscode-remote.remote-containers",
          "mikestead.dotenv",
          "ms-python.python",
          "charliermarsh.ruff",
          "tamasfe.even-better-toml",
          "ms-python.debugpy",
          "GitHub.copilot",
          "Github.copilot-chat",
          "GitHub.vscode-pull-request-github",
          "github.vscode-github-actions",
          "philnash.ngrok-for-vscode",
          "ms-vscode-remote.remote-ssh",
          "ms-vscode-remote.remote-ssh-edit",
          "ms-vscode-remote.remote-ssh-explorer",
          "ms-vscode-remote.remote-wsl",
          "ms-vscode-remote.remote-wsl-explorer",
          "ms-vscode-remote.remote-wsl-edit",
          "ms-vscode-remote.vscode-remote-extensionpack",
          "ms-azuretools.vscode-docker",
          "kisstkondoros.vscode-gutter-preview",
          "VisualStudioExptTeam.vscodeintellicode",
          "VisualStudioExptTeam.intellicode-api-usage-examples",
          "esbenp.prettier-vscode",
          "donjayamanne.python-environment-manager",
          "yatki.vscode-surround",
          "redhat.vscode-yaml",
          "Postman.postman-for-vscode",
          "ms-vscode.vscode-typescript-next",
          "arcanis.vscode-zipfs"
        ]
      }
    },
    "remoteUser": "root",
    "containerUser": "dev"
  }
  